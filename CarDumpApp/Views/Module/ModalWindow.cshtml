@model CarDumpApp.Models.Module


@using(Ajax.BeginForm("ModalWindow", "Module", new AjaxOptions { UpdateTargetId = "ddlist-module" }, new { id = "moduleformadd" }))
{


    <!-- Modal -->
    <div id="modal-moduleadd" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div style="background-color:#1a6358;border-radius: 5px 5px  0 0 ;" class="modal-header">
                    <button type="button" style="color:white" class="close" data-dismiss="modal">&times;</button>
                    <h4 style="color:white" class="modal-title">Add Module Type</h4>
                </div>
                <div class="modal-body">

                    @Html.EditorFor(model => model.Name, "", new { htmlAttributes = new { @class = "form-control" } })




                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-md" form="moduleformadd" value="Submit"  style="background-color:#1a6358;color:white;border-color:#1a6358 ;" onclick="$('#modal-moduleadd').modal('hide');">Submit</button>
                </div>
            </div>

        </div>
    </div>

}