@model CarDumpApp.Models.CarDump

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


 

<div>
    <h2>@Model.AutoModel.AutoBrand.Name @Model.AutoModel.Name @Model.Year</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Block 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Module.Name)
        </dd>
        <dt>
            Memory type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MemoryType.Name)
        </dd>

        <dt>
            Part number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModuleNumber)
        </dd>
        <dt>
            File URL
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileURL)
        </dd>
        <dt>
            Status
        </dt>

        <dd>
            проверена / не проверена
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
      
    </dl>
</div>

<div class="row">
 
        <div class="col-sm-6">
            <img class="img-thumbnail" style="width:500px; height:350px" src="~/Images/Home/images.jpg" />
            <p> Фото самого модуля</p>
        </div>
 
    <div class="col-sm-6">
        <img class="img-thumbnail" style="width:500px; height:350px" src="~/Images/Home/87844475.jpg" />
        <p> Фотография наклейки-стикера</p>
    </div>
</div>

