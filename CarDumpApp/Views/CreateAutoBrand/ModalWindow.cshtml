@model CarDumpApp.Models.AutoBrand


@using(Ajax.BeginForm("ModalWindow", "CreateAutoBrand", new AjaxOptions { UpdateTargetId = "ddlist-autobrand" }, new { id="AddAutoForm" }))
{


<!-- Modal -->
<div id="modal-AutobrandAdd" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add aut brand</h4>
            </div>
            <div class="modal-body">
              
                    @Html.DropDownList("CurrenBrands", null, htmlAttributes: new { @class = "form-control" })
                    @Html.EditorFor(model => model.Name, "", new { htmlAttributes = new { @class = "form-control" } })
                    
                     


            </div>
            <div class="modal-footer">
                    <button type="submit" form="AddAutoForm" value="Submit" onclick="$('#modal-AutobrandAdd').modal('hide');">Subsssssmit</button>
            </div>
        </div>

    </div>
</div>
 
}





